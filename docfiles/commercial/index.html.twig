

{% block body %}
    <h1>Logs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Password</th>
                <th>Username</th>
                <th>Iduserinfo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td><a href="{{ path('log_show', { 'id': log.id }) }}">{{ log.id }}</a></td>
                <td>{{ log.email }}</td>
                <td>{{ log.password }}</td>
                <td>{{ log.username }}</td>
                <td>{{ log.idUserInfo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('log_show', { 'id': log.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('log_edit', { 'id': log.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('log_new') }}">Create a new log</a>
        </li>
    </ul>
{% endblock %}
