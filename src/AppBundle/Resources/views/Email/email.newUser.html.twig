{% extends '@App/Email/email.base.html.twig' %}

{% block title %}
    Nouveau compte en attente
{% endblock %}

{% block main %}
    <h1 class="color1" style="color: #9ac00a">Nouveau compte en attente !</h1>

    <p>Bonjour,</p>
    <p>
        Un nouveau compte a été créé !<br>
        Pour la consulter, rendez-vous sur ce lien :<br>
        <a href="{{ url }}">{{ url }}</a>
    </p>

    <hr>

    <div class="information">
        <h3>Récapitulatif de la demande</h3>
        <table style="border-collapse: collapse">
            <thead>
            <tr style="color: #DD5115">
                <th style="border: 1px solid #000; padding: 0.5rem;">Prénom</th>
                <th style="border: 1px solid #000; padding: 0.5rem;">Nom</th>
                <th style="border: 1px solid #000; padding: 0.5rem;">Société</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th style="border: 1px solid #000; padding: 0.5rem;">{{ user.userProfile.firstname }}</th>
                <th style="border: 1px solid #000; padding: 0.5rem;">{{ user.userProfile.lastname }}</th>
                <th style="border: 1px solid #000; padding: 0.5rem;">{{ user.company.name }}</th>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}