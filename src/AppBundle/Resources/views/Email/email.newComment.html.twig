{% extends '@App/Email/email.base.html.twig' %}

{% block title %}
    Nouveau commentaire rédigé
{% endblock %}

{% block main %}
    <h1 class="color1" style="color: #9ac00a; text-align: center;">Nouveau commentaire rédigé par la société {{ ticket.user.company.name }}</h1>

    <p style="text-align: justify;">Bonjour,</p>
    <p>
        Pour le consulter, rendez-vous sur ce lien :<br>
        <a href="{{ url }}">{{ url }}</a>
    </p>

    <hr>

    <div class="information">
        <h3>Récapitulatif du commentaire</h3>
        <table style="border-collapse: collapse; min-width: 80%;">
            <thead>
            <tr style="color: #DD5115">
                <th style="border: 1px solid #000; padding: 0.5rem;">N° de ticket</th>
                <th style="border: 1px solid #000; padding: 0.5rem;">Utilisateur</th>
                <th style="border: 1px solid #000; padding: 0.5rem;">Sujet</th>
                <th style="border: 1px solid #000; padding: 0.5rem;">Nouveau commentaire</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th style="border: 1px solid #000; padding: 0.5rem;">{{ ticket.id }}</th>
                <th style="border: 1px solid #000; padding: 0.5rem;">{{ ticket.user.userprofile.lastname  }}</th>
                <th style="border: 1px solid #000; padding: 0.5rem;">{{ ticket.subject }}</th>
                <th style="border: 1px solid #000; padding: 0.5rem;">{{ comment.comment }}</th>
            </tr>
            </tbody>
        </table>


    </div>
{% endblock %}