{% macro getDictionary(type, title, dictionary, form) %}
    <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 dictionary-block">
        <div class="dictionary-list">
            <h3 class="list-title-{{ type }}">{{ title }}</h3>
            <ul id="{{ type }}" class="list-group">
                {% for elementList in dictionary %}
                    <li id="list-group-item-{{ elementList.id }}" class="list-group-item"
                        data-index-number="{{ elementList.id }}">
                        <span id="li-value-{{ elementList.id }}">
                            {{ elementList.value }}
                        </span>
                        <span class="badge">
                            <a class="modal-update" href="" data-toggle="modal" data-target="#dictionary-modal-update">
                                <i class="fa fa-cog fa-2x" aria-hidden="true"></i>
                            </a>
                            <a class="modal-delete" href="" data-toggle="modal" data-target="#dictionary-modal-delete">
                                <i class="fa fa-close fa-2x" aria-hidden="true"></i>
                            </a>
                        </span>
                    </li>
                {% endfor %}
            </ul>
            {{ form_start(form, {'attr': {'class': 'dictionary-form dictionary-form-'~type} }) }}
            {{ form_widget(form.value, {'attr': {'class': 'dictionary-field dictionary-field-'~type} }) }}
            {{ form_widget(form._token, {'attr': {'class': 'dictionary-token dictionary-token-'~type} }) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endmacro %}