{% extends '@App/Layout/backoffice-base.html.twig' %}

{% block title %}
    Changement - {{ parent() }}
{% endblock %}

{% block body %}
    <section id="password-change">
        <div class="container form text-center">
            <div class="row">
                <div class="col-md-12 message-register">
                    {% for flash_message in app.session.flashBag.get('notice') %}
                        <div class="alert alert-info">
                            {{ flash_message }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="container form">
            <div class="row">
                <div class="col-xs-12">
                    {{ form_start(form) }}
                    <div class="form-wrap">
                        <hr>
                        <p class="form-paragraph">Changez votre mot de passe</p>
                        <div class="form-group">
                            {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.oldPassword) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.plainPassword.first) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>
                        {{ form_row(form._token) }}
                        <div class="form-group">
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-custom btn-lg btn-block form-submit-button'}, 'label': 'Enregistrer'}) }}
                        </div>
                        <hr>
                        {{ form_end(form, {'render_rest': false}) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
