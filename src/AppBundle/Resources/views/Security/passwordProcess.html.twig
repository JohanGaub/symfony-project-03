{% extends '@App/Layout/showcase-base.html.twig' %}

{% block title %}
    Réinitialisation - {{ parent() }}
{% endblock %}

{% block body %}
    <section id="password-process">
        <div class="container form text-center">
            <div class="row">
                <div class="col-md-12">
                    {% for flash_message in app.session.flashBag.get('notice') %}
                        <div class="alert alert-info">
                            {{ flash_message }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="container form">
            <div class="row">
                <div class="col-xs-12">
                    {{ form_start(form) }}
                    <div class="form-wrap">
                        <hr>
                        <p class="form-paragraph">Demandez la réinitialisation de mot de passe</p>
                        <p class="form-comment-paragraph">Un e-mail vous serait envoyer. <br> Merci de suivre ses instructions.</p>
                        <div class="form-group">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        {{ form_row(form._token) }}
                        <div class="form-group">
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-custom btn-lg btn-block form-submit-button'}}) }}
                        </div>
                        <hr>
                    </div>
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}


