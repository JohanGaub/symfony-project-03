{% extends '@App/Layout/backoffice-base.html.twig' %}

{% block body %}
    <div class=" col-xs-4 col-xs-offset-4">
        <table class="table table-user-information">
            <tbody>
            <h1>Votre compte</h1>
            {% for user in User %}
            <tr>
                <td>Prénom</td>
                <td>{{ user.userProfile.firstname }}</td>
            </tr>
            <tr>
                <td>Nom</td>
                <td>{{ user.userProfile.lastname }}</td>
            </tr>
            <tr>
                <td>Mobile</td>
                <td>{{ user.userProfile.phone }}</td>
            </tr>
            <tr>
            <tr>
                <td>Société</td>
                <td>{{ user.company.name }}</td>
            </tr>
            <tr>
                <td>Login</td>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
            <tr>
                <td>Role</td>
                <td>{% for role in user.roles %}
                        {% if(role == "ROLE_ADMIN") %}
                            Administrateur
                        {% elseif(role == "ROLE_COMMERCIAL") %}
                            Commercial
                        {% elseif(role == "ROLE_TECHNICIAN") %}
                            Technique
                        {% elseif(role == "ROLE_PROJECT_RESP") %}
                            Responsable Projet
                        {% elseif(role == ("ROLE_TECHNICIAN" and "ROLE_COMMERCIAL")) %}
                            Commercial et Technique
                        {% endif %}
                    {% endfor %}</td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td>{{ user.company.address }}</td>
            </tr>
            <tr>
                <td>Ville</td>
                <td>{{ user.company.town }}</td>
            </tr>
            <tr>
                <td>Code Postale</td>
                <td>{{ user.company.postCode }}</td>
            </tr>
            <tr>
                <td>Numéro société</td>
                <td>{{ user.company.phone }}</td>
            </tr>
            <tr>
                <td>Siret</td>
                <td>{{ user.company.siret }}</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>{{ user.company.email }}</td>
            </tr>
            </tbody>
        </table>
    {% endfor %}
    <div class="panel-footer text-center">
        <a href="edit.html" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
    </div>


{% endblock %}