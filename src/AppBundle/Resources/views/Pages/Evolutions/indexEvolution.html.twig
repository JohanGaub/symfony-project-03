{% extends '@App/backoffice-base.html.twig' %}

{% block title %}
    Evolutions techniques
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="bo-title-page col-lg-12">
                <h2>Evolutions techniques</h2>
            </div>

            <div class="col-lg-12">
                <a href="{{ path('evolutionAdd') }}" class="btn btn-default">Ajouter une nouvelle évolution</a>
            </div>

            {{ dump(evolutions) }}

            {% for evolution in evolutions %}
                <div class="bo-evolution col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="panel-top-line">
                                <p class="evolution-status">{{ evolution.status }}</p>
                                <a href="{{ path('evolutionUnit', {'technicalEvolutionId': evolution.id}) }}">
                                    <h4>{{ evolution.title }}</h4>
                                </a>
                            </div>
                            <p>{{ evolution.sumUp }}</p>
                        </div>
                        <div class="panel-footer">
                            <div class="top-footer">
                                <p>Type de catégorie : {{ evolution.category.type }}</p>
                                <p>Nom de catégorie : {{ evolution.category.title }}</p>
                            </div>
                            <div class="bottom-footer">
                                <div class="footer-date">
                                    <p>Fin : {{ evolution.expectedDelay|date("d/m/Y", "Europe/Paris") }}</p>
                                    <p>Debut : {{ evolution.creationDate|date("d/m/Y", "Europe/Paris") }}</p>
                                </div>
                                <div class="footer-more">
                                    <p>{{ evolution.userTechnicalEvolutions[0].note }}/10</p>
                                    <p>{{ evolution.userTechnicalEvolutions[0].comment }} commentaire(s)</p>
                                </div>
                            </div>
                            <div class="under-bottom-footer">
                                <a href="{{ path('evolutionUpdate', {'technicalEvolutionId': evolution.id}) }}">Modifier l'évolution</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

            <div class="col-lg-12">
                {% include '@App/Elements/include.pagination.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}