{% extends '@App/backoffice-base.html.twig' %}

{% block title %}
    {{ evolution.title }}
{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 unit-evolution">
                <div class="et-title"><h2>{{ evolution.title }}</h2></div>
                <div class="et-sum-up"><h4>{{ evolution.sumUp }}</h4></div>
                <div class="et-status"><p>{{ evolution.status }}</p></div>
                <div class="et-category">
                    <div class="et-category-type"><p>Type de la catégorie : {{ evolution.category.type }}</p></div>
                    <div class="et-category-name"><p>Nom de la catégorie : {{ evolution.category.title }}</p></div>
                </div>
                <div class="et-content"><p>{{ evolution.content }}</p></div>
            </div>
        </div>


        <div class="row">
            {% if is_granted('ROLE_PROJECT_RESP') %}
                <div class="col-lg-12">
                    <h4 class="vote-title">Votez pour cette évolution technique ! </h4>
                    {{ form_start(noteForm, {'attr': {
                        'id': 'app_bundle_note_userTechnicalEvolution'
                    }}) }}

                    {% for message in app.session.flashBag.get('info') %}
                        <div class="alert alert-info"> {{ message }}</div>
                    {% endfor %}


                    <div class="error-box"></div>
                    {% spaceless %}
                    <div class="form-group controls rating" data-index-number="{{ evolution.id }}">
                        {% for i in 0..9 %}
                            <label class="label-star-link" data-index-number="{{ i + 1 }}">
                                {{ form_widget(noteForm.note[i], {'attr': {'class': 'star-link' }}) }}
                            </label>
                        {% endfor %}
                    </div>
                    {% endspaceless %}
