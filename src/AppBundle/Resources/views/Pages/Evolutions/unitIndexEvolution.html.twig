{% extends '@App/backoffice-base.html.twig' %}

{% block title %}
    {{ evolution.title }}
{% endblock %}

{% block body %}

    <div class="container-fluid">
        {{ dump(evolution) }}
        {{ dump(comments) }}
        {{ dump(notes) }}

        <div class="row">
            <div class="bo-title-page col-lg-12">
                <h3>{{ evolution.title }}</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <h4>Votez pour cette évolution technique ! </h4>
                <p>Il y a pour le moment x notes</p>
                <p>La moyenne est de </p>
                <div class="star-rating" data-index-number="{{ evolution.id }}">
                    <fieldset class="rating">
                        <input class="star-link" type="radio" id="star10" name="rating" value="10" /><label class = "full" for="star10"></label>
                        <input class="star-link" type="radio" id="star9" name="rating" value="9" /><label class = "full" for="star9"></label>
                        <input class="star-link" type="radio" id="star8" name="rating" value="8" /><label class = "full" for="star8"></label>
                        <input class="star-link" type="radio" id="star7" name="rating" value="7" /><label class = "full" for="star7"></label>
                        <input class="star-link" type="radio" id="star6" name="rating" value="6" /><label class = "full" for="star6"></label>
                        <input class="star-link" type="radio" id="star5" name="rating" value="5" /><label class = "full" for="star5"></label>
                        <input class="star-link" type="radio" id="star4" name="rating" value="4" /><label class = "full" for="star4"></label>
                        <input class="star-link" type="radio" id="star3" name="rating" value="3" /><label class = "full" for="star3"></label>
                        <input class="star-link" type="radio" id="star2" name="rating" value="2" /><label class = "full" for="star2"></label>
                        <input class="star-link" type="radio" id="star1" name="rating" value="1" /><label class = "full" for="star1"></label>
                    </fieldset>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <h4>Liste des commentaires</h4>
            </div>

            <div class="col-lg-12">
                <div class="add-new-comment">
                    {{ form_start(addForm, {'attr': {
                        'id': 'app_bundle_comment_userTechnicalEvolution',
                        'data-index-number': evolution.id
                    }}) }}
                    {{ form_end(addForm) }}
                </div>
                <div class="comment-list">
                    {% for comment in comments %}
                        <div id="ute_id_{{ comment.id }}" class="unit-comment">
                            <h5>{{ comment.user.userProfile.firstname }} {{ comment.user.userProfile.lastname }}</h5>
                            <i>Le {{ comment.date|date("d/m/Y")}} à {{ comment.date|date("h:i:s")}}</i>
                            <p id="comment-value-id-{{ comment.id }}" class="comment-value">{{ comment.comment }}</p>
                            <a class="modal-update" href="" data-toggle="modal" data-target="#comment-modal-update"
                                data-index-number="{{ comment.id }}">
                                <i class="fa fa-cog" aria-hidden="true"></i>
                            </a>
                            <a class="modal-delete" href="" data-toggle="modal" data-target="#comment-modal-delete"
                                data-index-number="{{ comment.id }}">
                                <i class="fa fa-close" aria-hidden="true"></i>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>

        <div class="loader-wcs" data-index-number="{{ evolution.id }}">

        </div>

    </div>

    {# comment delete modal #}
    <div id="comment-modal-delete" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Suppression d'un commentaire</h4>
                </div>
                <div class="modal-body">
                    <p>Êtes vous sur de vouloir supprimer ce commentaire ?</p>
                    <p class="delete-value"></p>
                    <a id="comment-link-delete" href="" class="text-color-1" data-dismiss="modal">Je confirmer vouloir supprimer ce commentaire</a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                </div>
            </div>
        </div>
    </div>

    {# comment update modal #}
    <div id="comment-modal-update" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modification d'un commentaire</h4>
                </div>
                <div class="modal-body">
                    {{ form_start(updateForm, {'attr': {'id': 'app_bundle_comment_userTechnicalEvolution_update'}}) }}
                    {{ form_label(updateForm.comment) }}
                    {{ form_widget(updateForm.comment, {'attr': {'class': 'app_bundle_comment_userTechnicalEvolution_updateField'}}) }}
                    {{ form_end(updateForm) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/page.evolution-unit.js') }}"></script>
{% endblock %}