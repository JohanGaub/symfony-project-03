{% extends '@App/Layout/backoffice-base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
    <section id="register">

        <div class="register-title col-md-12">
            <h1>Modifier un utilisateur</h1>
        </div>
        <div class="container form">
            <div class="message-register row">
                <div class="col-md-12">
                    {% for flash_message in app.session.flashBag.get('notice') %}
                        <div class="alert alert-info">
                            {{ flash_message }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="container form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-wrap">
                        <hr>
                        <p class="notice-field">Attention, tous les champs sont obligatoires</p>
                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.roles) }}
                            {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.roles) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.company.name) }}
                            {{ form_widget(form.company.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.company.name) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.company.address) }}
                            {{ form_widget(form.company.address, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.company.address) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.company.town) }}
                            {{ form_widget(form.company.town, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.company.town) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.company.postCode) }}
                            {{ form_widget(form.company.postCode, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.company.postCode) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.company.email) }}
                            {{ form_widget(form.company.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.company.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.company.siret) }}
                            {{ form_widget(form.company.siret, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.company.siret) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.company.phone) }}
                            {{ form_widget(form.company.phone, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.company.phone) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.userProfile.firstname) }}
                            {{ form_widget(form.userProfile.firstname, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.userProfile.firstname) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.userProfile.lastname) }}
                            {{ form_widget(form.userProfile.lastname, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.userProfile.lastname) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.userProfile.phone) }}
                            {{ form_widget(form.userProfile.phone, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.userProfile.phone) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-custom btn-lg btn-block form-submit-button'}}) }}
                        </div>
                        <hr>
                    </div>

                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}



