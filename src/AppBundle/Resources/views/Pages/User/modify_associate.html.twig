{% extends '@App/Layout/backoffice-base.html.twig' %}

{% block title %}Modifier un collaborateur{% endblock %}

{% block body %}
    <section id="registration">

        <div class="register-title col-md-12">
            <h1>Modifier un collaborateur</h1>
        </div>

        <div class="col-md-12">
            {% include '@App/Elements/include.flashBagMessage.html.twig' %}
        </div>

        {{ form_start(form) }}
        <div class="container form">
            <div class="row">
                <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4">
                        <hr>
                        <p class="notice-field">Attention, tous les champs sont obligatoires</p>
                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                       <div class="form-group">
                            {{ form_label(form.roles) }}
                            {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.roles) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.userProfile.firstname) }}
                            {{ form_widget(form.userProfile.firstname, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.userProfile.firstname) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.userProfile.lastname) }}
                            {{ form_widget(form.userProfile.lastname, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.userProfile.lastname) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.userProfile.phone) }}
                            {{ form_widget(form.userProfile.phone, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.userProfile.phone) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-custom btn-lg btn-block form-submit-button'}}) }}
                        </div>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}