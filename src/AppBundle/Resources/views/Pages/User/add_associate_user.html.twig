{% extends '@App/Layout/backoffice-base.html.twig' %}

{% block title %}Ajouter un collaborateur{% endblock %}

{% block body %}
    <section id="registration">

        <div class="register-title col-md-12">
            <h1>Ajouter un collaborateur</h1>
        </div>
        <div class="message-register row">
            <div class="col-md-12">
                {% for flash_message in app.session.flashBag.get('notice') %}
                    <div class="alert alert-info">
                        {{ flash_message }}
                    </div>
                {% endfor %}
            </div>
        {{ form_start(form_associate) }}
        <div class="container form">
            <div class="row">
                <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4">
                        <hr>
                        <p class="notice-field">Attention, tous les champs sont obligatoires</p>
                        <div class="form-group">
                            {{ form_label(form_associate.email) }}
                            {{ form_widget(form_associate.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form_associate.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form_associate.roles) }}
                            {{ form_widget(form_associate.roles, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form_associate.roles) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form_associate.plainPassword.first) }}
                            {{ form_widget(form_associate.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form_associate.plainPassword.first) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form_associate.plainPassword.second) }}
                            {{ form_widget(form_associate.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form_associate.plainPassword.second) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form_associate.userProfile.firstname) }}
                            {{ form_widget(form_associate.userProfile.firstname, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form_associate.userProfile.firstname) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form_associate.userProfile.lastname) }}
                            {{ form_widget(form_associate.userProfile.lastname, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form_associate.userProfile.lastname) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form_associate.userProfile.phone) }}
                            {{ form_widget(form_associate.userProfile.phone, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form_associate.userProfile.phone) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form_associate.submit, {'attr': {'class': 'btn btn-custom btn-lg btn-block form-submit-button'}}) }}
                        </div>
                        <hr>
                    </div>

                </div>
            </div>
        </div>
        {{ form_end(form_associate) }}
    </section>
{% endblock %}