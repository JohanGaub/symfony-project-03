<section id="index-itneo" class="row">
    <!-- Part top (logo + h3 text -> descript product) -->
    <div class="col-xs-12 itneo-top-case">
        <h2 class="it-h2">Notre solution téléphonie ip</h2>
    </div>
    <!-- Part down (3parts -> text-info -> slider -> button -->
    <div class="row">
        <!-- First col (text-info) -->
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3 it-ul-box-1">
            <ul class="it-first-list">
                <li>Solution logicielle</li>
                <li>Innovante</li>
                <li>Basée sur Asterisk</li>
                <li>Sans licence / utilisateur</li>
                <li>En intelligence partagé</li>
                <li>Marque blanche</li>
                <li>Marge optimisée</li>
            </ul>
        </div>
        <!-- Second col (slider) -->
        <div id="itneo-slider-block" class="col-xs-12 col-sm-12 col-md-12 col-lg-6">

            <div class="itneo-slider">
                <!-- Swiper -->
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide"><img src="{{ asset('assets/img/slide-collaborative.png') }}" alt="it photo"></div>
                        <div class="swiper-slide"><img src="{{ asset('assets/img/slide-economique.png') }}" alt="it photo"></div>
                        <div class="swiper-slide"><img src="{{ asset('assets/img/slide-ergonomique.png') }}" alt="it photo"></div>
                    </div>
                    <!-- Add Pagination -->
                    <div class="swiper-pagination"></div>
                    <!-- Add Arrows -->
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            </div>

            <a href="#" class="plus-info-2">Plus d'info</a>
        </div>
        <!-- Last part (button) -->
        {% import '@App/Elements/macro.svgButton.html.twig' as button %}
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3">
            <img class="it-logo be-inline" src="{{ asset('assets/img/itneo_logo_HD.png') }}" alt="it neo logo">
            <div class="it-btn-group">
                <a href="http://itneo.fr" target="_blank">
                    {{ button.svgButton("#e6397e", "Découvrez itnéo !") }}
                </a>
            </div>
        </div>
    </div>
</section>

