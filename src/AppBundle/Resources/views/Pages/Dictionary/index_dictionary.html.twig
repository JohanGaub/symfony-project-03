{% extends '@App/back_office_base.html.twig' %}

{% block title %}
    Liste des dictionnaires
{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="bo-title-page col-lg-12">
                <h1>Liste des dictionnaires</h1>
            </div>

            <div class="bo-title-page col-lg-12">
                {% include '@App/Elements/flash_bag_message.html.twig' %}
            </div>

            {# list of all dictionary #}
            <div class="col-lg-12">
                {% import 'AppBundle:Elements:macro.dictionaryForm.html.twig' as personalForm %}

                {% for title,dictionary in dictionarys %}
                    <div class="col-lg-4 dictionary-list">
                        <h3>{{ title }}</h3>
                        <ul id="list_{{ title }}" class="list-group">
                            {% for elementList in dictionary %}
                                <li class="list-group-item">
                                    {{ elementList.value }}
                                    <span class="badge">
                                        <a href="{{ path('dictionaryDelete', {'dictionaryId': elementList.id}) }}">
                                            <i class="fa fa-window-close" aria-hidden="true"></i>
                                        </a>
                                    </span>
                                </li>
                            {% endfor %}
                        </ul>
                        {{ personalForm.dictionaryForm(title) }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/form.dictionary.js') }}"></script>
{% endblock %}