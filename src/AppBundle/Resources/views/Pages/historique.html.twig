{% extends 'AppBundle::base.html.twig' %}

{% block body %}

    <div class="historique-communit">
        <h2>Historique de la commun'it</h2>

        <!-- The Timeline -->
        <ul class="timeline">
            <!-- Item 1 -->
            <li>
                <div class="direction-r">
                    <div class="flag-wrapper">
                        <span class="flag flag-right">Production</span>
                        <span class="time-wrapper"><span class="time">Juillet 2017</span></span>
                    </div>
                    <div class="desc">Mise en production du service web communIt !</div>
                </div>
            </li>

            <!-- Item 2 -->
            <li>
                <div class="direction-l">
                    <div class="flag-wrapper">
                        <span class="flag flag-left">Web Communit</span>
                        <span class="time-wrapper"><span class="time">Mars 2017</span></span>
                    </div>
